# Kali MCP Server Environment Variables
# Copy this file to .env and configure as needed

# Server Configuration
MCP_SERVER_NAME=kali-mcp
MCP_SERVER_VERSION=1.0.0

# Authorization
AUTHORIZED_USER_ID=your-user-id-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/kali_mcp.log

# Metasploit RPC (optional)
MSFRPC_HOST=localhost
MSFRPC_PORT=55553
MSFRPC_USER=msf
MSFRPC_PASS=password

# Default scan settings
DEFAULT_SCAN_TIMEOUT=300
DEFAULT_MAX_THREADS=10

# Security
REQUIRE_AUTHORIZATION=true
AUDIT_LOG_ENABLED=true
